!!! 5
%html
  %head
    %title WebTracks
    = include_gon
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .container
      %ul.nav.nav-tabs
        %li= link_to "Home", root_path
        %li= link_to "About", about_path
        - if current_user
          %li= link_to "Profile", edit_user_registration_path
          %li= link_to "Dashboard", events_path

        .pull-right.user-info
          - if current_user
            Welcome back #{(current_user.name || current_user.email)}! #{link_to "Sign out", destroy_user_session_path, method: :delete}
          - else
            #{link_to "Sign In", new_user_session_path} or #{link_to "Sign Up", new_user_registration_path}
      - if flash[:notice]
        %br
        .alert.alert-success
          %button.close{type: "button", data: {dismiss: "alert"}} &times;
          = flash[:notice]
      - elsif flash[:error]
        %br
        .alert.alert-danger
          %button.close{type: "button", data: {dismiss: "alert"}} &times;
          = flash[:error]
      - elsif flash[:alert]
        %br
        .alert.alert-warning
          %button.close{type: "button", data: {dismiss: "alert"}} &times;
          = flash[:alert]
      = yield